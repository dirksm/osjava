<?xml version="1.0"?>
<project>
  
  <pomVersion>3</pomVersion>
  <id>jpe</id>
  <name>jpe</name>
  <currentVersion>0.9.11.1</currentVersion>
  <organization>
    <name>OSJava</name>
    <url>http://www.osjava.org/</url>
    <logo>/images/osjava.gif</logo>
  </organization>
  <inceptionYear>1999</inceptionYear>
  <package>com.generationjava.apps.jpe</package>
  <logo>/images/1x1.gif</logo>
  
  <!-- Gump integration -->
  <gumpRepositoryId>jpe</gumpRepositoryId>

  <description>
      The Java PDA Editor. An IDE for PDA's, originally written for the Psion platform and now under development for the Sharp Zaurus c760.
  </description>
  
  <shortDescription>Java PDA Editor</shortDescription>

  <url>http://www.osjava.org/jpe/</url>
  <issueTrackingUrl>http://www.osjava.org:8080/jira/secure/BrowseProject.jspa?id=xxxxx</issueTrackingUrl>
  <siteAddress>www.osjava.org/maven/jpe</siteAddress>
  <siteDirectory>/sites/org/osjava/www/releases/official/jpe/</siteDirectory>
  <distributionDirectory>/sites/org/osjava/www/releases/official/jpe/</distributionDirectory>

  <repository>
    <connection>scm:cvs:pserver:anonymous@cvs.osjava.org:/var/cvs/:jpe</connection>
    <url>http://cvs.osjava.org/view-cvs/viewcvs.cgi/jpe/</url>
  </repository>

  <developers>

    <developer>
      <name>Henri Yandell</name>
      <id>hen</id>
      <email>bayard@generationjava.com</email>
      <organization>GenerationJava</organization>
      <roles>
        <role>Java Developer</role>
      </roles>
    </developer>

  </developers>

  <dependencies>
    <dependency>
      <id>jstyle</id>
      <version>unknown</version>
    </dependency>
    <!--
    <dependency>
      <id>sun-tools</id>
      <jar>tools.jar</jar>
    </dependency>
    -->
    <dependency>
      <id>gnu-regexp</id>
      <version>1.1.4</version>
    </dependency>
  </dependencies>

  <build>

    <nagEmailAddress>bayard@www.generationjava.com</nagEmailAddress>

    <sourceDirectory>src/java</sourceDirectory>

    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
    </unitTest>

    <!-- J A R  R E S O U R C E S -->
    <!-- Resources that are packaged up inside the JAR file -->

    <jarResources>
        <jarResource>include = *.properties</jarResource>
    </jarResources>

    <jars>
    </jars>
  </build>
</project>

