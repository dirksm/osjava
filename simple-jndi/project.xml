  </developers>
  
  <contributors>
  </contributors>
  
  <dependencies>
    <!-- only used if you use .xml files -->
    <dependency>
      <groupId>genjava</groupId>
      <artifactId>gj-xml</artifactId>
      <version>1.0</version>
      <url>http://www.ibiblio.org/maven/genjava/jars/gj-xml-1.0.jar</url>
    </dependency>
    <!-- used if you turn on dbcp usage -->
    <dependency>
      <id>commons-dbcp</id>
      <version>1.1</version>
      <url>http://www.ibiblio.org/maven/commons-dbcp/jars/commons-dbcp-1.1.jar</url>
    </dependency>
    <!-- used if you turn on dbcp usage -->
    <dependency>
      <id>commons-pool</id>
      <version>1.1</version>
      <url>http://www.ibiblio.org/maven/commons-pool/jars/commons-pool-1.1.jar</url>
    </dependency>

    <!--
    <dependency>
      <groupId>directory-naming</groupId>
      <artifactId>directory-naming-core</artifactId>
      <version>SNAPSHOT</version>
    </dependency>
    -->
  </dependencies>

  <build>

    <nagEmailAddress>bayard@www.osjava.org</nagEmailAddress>

    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>src/test/config</directory>
          <targetPath>config</targetPath>
        </resource>
        <resource>
          <directory>src/test</directory>
          <includes>
            <include>jndi.properties</include>
          </includes>
        </resource>
      </resources>
    </unitTest>

  </build>

    <reports>
        <report>maven-jxr-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-license-plugin</report>
        <report>maven-changes-plugin</report>           
    </reports>


</project>

