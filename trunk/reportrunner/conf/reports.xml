<?xml version="1.0" encoding="ISO-8859-1"?>

<reports>
 <report name="basicsql" label="BasicSql" class="org.osjava.reportrunner.reports.SqlReport">
  <sql>select * from userrole</sql>
  <renderers>txt</renderers>
 </report>
 <report name="hardcode" label="Dummy" class="org.osjava.reportrunner.reports.DummyReport">
  <renderers>txt,html</renderers>
 </report>
 <report name="paramsql" label="ParamSql" class="org.osjava.reportrunner.reports.SqlReport">
  <sql>select * from userrole where rolename=? and username=?</sql>
  <param name="rolename" type="java.lang.String"/>
  <param name="username" type="java.lang.String" binding="select username, username from userrole"/>
  <renderers>html,csv,excel</renderers>
 </report>
 <report name="datesql" label="DateSql" class="org.osjava.reportrunner.reports.SqlReport">
  <sql>select id, title, text, pubtime from weblogentry where pubtime between ? and ?</sql>
  <param name="after date" type="java.sql.Timestamp" pattern="dd/MM/YYYY" parser="org.osjava.reportrunner.parser.DateTimeParser"/>
  <param name="before date" type="java.sql.Timestamp" pattern="dd/MM/YYYY" parser="org.osjava.reportrunner.parser.DateTimeParser"/>
  <renderers>html</renderers>
  <column name="id" label="Weblog ID"/>
  <column name="title" label="Title"/>
  <column name="text" label="Text"/>
  <column name="pubtime" label="Publication time" pattern="dd/MM/YYYY" formatter="org.osjava.reportrunner.formatter.DateTimeFormatter"/>
 </report>
 <report name="bookmarks" label="Bookmarks" class="org.osjava.reportrunner.reports.SqlReport">
  <sql>select name, url from bookmark where priority = ?</sql>
  <param name="Priority" type="java.lang.Integer"/>
  <renderers>html</renderers>
  <column name="name" label="Name" pattern="?" format="org.osjava.reportrunner.StringFormat"/>
  <column name="url" label="Web address"/>
  <!-- will need sub-renderers per renderer for a column so that urls can be turned into <a href..> etc -->
 </report>
</reports>
