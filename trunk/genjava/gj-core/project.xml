<?xml version="1.0"?>
<project>
  <extend>../project.xml</extend>
  <id>gj-core</id>
  <name>GenJava-Core</name>
  <currentVersion>3.0.1</currentVersion>
  <inceptionYear>2000</inceptionYear>
  
  <description>
     A re-usable library of Java classes. Originally stand-alone, many of the classes have since gone into various parts of the Jakarta Commons project, and thus this package contains various dependencies. 
  </description>
  
  <shortDescription>Core code</shortDescription>

  <dependencies>
    <dependency>
      <id>commons-lang</id>
      <version>2.0</version>
      <url>http://jakarta.apache.org/commons/lang.html</url>
    </dependency>
    <dependency>
      <id>commons-collections</id>
      <version>2.1</version>
      <url>http://jakarta.apache.org/commons/collections.html</url>
    </dependency>
    <!-- ClassIndex uses the gj-find code -->
    <dependency>
      <groupId>genjava</groupId>
      <artifactId>gj-find</artifactId>
      <version>0.1</version>
      <url>http://www.osjava.org/genjava/</url>
    </dependency>
  </dependencies>

</project>

